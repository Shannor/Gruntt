<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.RecyclerView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerView_fragment_popular_comics"
        android:title="comic.shannortrotty.gruntt.fragments.PopularComicFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="comic.shannortrotty.gruntt.fragments.PopularComicFragment"
        tools:listitem="@layout/fragment_popular_view" />

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="wrap_content"
        android:id="@+id/loading_icon_fragment_popular_comics"
        android:layout_height="wrap_content"
        app:indicatorName="BallPulseIndicator"
        app:indicatorColor="@color/color_accent"
        android:layout_centerInParent="true"
        />

</RelativeLayout>