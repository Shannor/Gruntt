<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/comic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_popular_frag_comic_title"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/networkImgView_popular_frag_comic_img"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="@string/comic_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_popular_frag_comic_genre"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_popular_frag_comic_title"
        app:layout_constraintLeft_toLeftOf="@+id/textView_popular_frag_comic_title"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/networkImgView_popular_frag_comic_img"
        android:layout_width="120dp"
        android:layout_height="132dp"
        android:layout_marginTop="@dimen/textView_margin_top"
        android:layout_marginBottom="@dimen/textView_margin_top"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>