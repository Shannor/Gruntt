<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:src="@drawable/ic_menu_camera"
            android:id="@+id/networkImgView_info_fragment_large_img"
            android:layout_width="150dp"
            android:layout_height="0dp"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="12dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout_btn_holder"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_info_fragment_comic_description"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="24dp"
            android:padding="@dimen/appbar_padding_top"
            android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_btn_holder"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />



            <TextView
                android:text="Comic Name"
                android:id="@+id/textView_info_fragment_comic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/networkImgView_info_fragment_large_img"
                android:layout_marginStart="8dp" />

            <TextView
                android:text="Alt Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_info_fragment_comic_alt_name"
                android:layout_marginTop="16dp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@+id/textView_info_fragment_comic_name"
                app:layout_constraintLeft_toLeftOf="@+id/textView_info_fragment_comic_name" />

            <TextView
                android:text="Author"
                android:id="@+id/textView_info_fragment_comic_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_info_fragment_comic_alt_name"
                app:layout_constraintLeft_toLeftOf="@+id/textView_info_fragment_comic_alt_name" />

            <TextView
                android:text="Genre"
                android:id="@+id/textView_info_fragment_comic_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ems="10"
                android:ellipsize="end"
                android:scrollHorizontally="false"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_info_fragment_comic_author"
                app:layout_constraintLeft_toLeftOf="@+id/textView_info_fragment_comic_author" />

            <TextView
                android:text="Status:"
                android:id="@+id/textView_info_fragment_comic_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_info_fragment_comic_genres"
                app:layout_constraintLeft_toLeftOf="@+id/textView_info_fragment_comic_genres" />

            <TextView
                android:text="Release Date"
                android:id="@+id/textView_info_fragment_comic_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_info_fragment_comic_status"
                app:layout_constraintLeft_toLeftOf="@+id/textView_info_fragment_comic_status" />

        <LinearLayout
            android:id="@+id/linearLayout_btn_holder"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_info_fragment_comic_release_date"
            app:layout_constraintHorizontal_bias="0.56">

            <Button
                android:text="Add To Favorites"
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/btn_info_fragment_comic_add_to_favorites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:text="Resume"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btn_info_fragment_comic_resume" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</ScrollView>